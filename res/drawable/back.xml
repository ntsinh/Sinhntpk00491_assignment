<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#E6F0F0"
                android:endColor="#BABABA"
                android:angle="270" />
            <corners
                android:radius="10dip"/>
            <padding
                android:left="5dip"
                android:top="8dip"
                android:right="5dip"
                android:bottom="8dip" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#E6F0F0"
                android:endColor="#BABABA"
                android:angle="270" />
            <corners
                android:radius="10dip"/>
            <padding
                android:left="5dip"
                android:top="8dip"
                android:right="5dip"
                android:bottom="8dip" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <corners
                android:radius="10dip" />
            <padding
                android:left="5dip"
                android:top="8dip"
                android:right="5dip"
                android:bottom="8dip" />
        </shape>
    </item>
</selector>
